{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@templates/*": [
        "templates/*"
      ],
      "@theme/*": [
        "theme/*"
      ],
      "@mocks/*": [
        "lib/mocks/*"
      ],
      "@typedefs/*": [
        "lib/types/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@providers/*": [
        "providers/*"
      ],
      "@helpers/*": [
        "lib/helpers/*"
      ],
      "@reducers/*": [
        "lib/reducers/*"
      ],
      "@components": [
        "components/index"
      ],
      "@helpers": [
        "lib/helpers/index"
      ],
      "@reducers": [
        "lib/reducers/index"
      ],
      "@theme": [
        "theme/index.scss"
      ]
    },
    "incremental": true
  },
  "include": [
    "markdown.d.ts",
    "scss.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "mocks/mocks.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
